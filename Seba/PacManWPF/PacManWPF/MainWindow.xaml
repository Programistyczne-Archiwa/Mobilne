<Window x:Class="PacManWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PacManWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="GameWindow" Focusable="True" Background="Black" KeyDown="GameWindow_KeyDown" KeyUp="GameWindow_KeyUp">
        <Canvas x:Name="DebugModeCanvas">
            <Label x:Name="LeftCord" Content="Left: " FontSize="32" Foreground="White" Canvas.Left="400"></Label>
            <Label x:Name="TopCord" Content="Top: " FontSize="32" Foreground="White" Canvas.Left="550"></Label>
        </Canvas>
        <Rectangle x:Name="Player" Height="50" Width="50" Fill="Red" Canvas.Left="0" Canvas.Top="0" />
    </Canvas>
</Window>
