<Window x:Class="CheckPasswordApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:CheckPasswordApp.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Check Your Password" Height="350" Width="400">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Padding" Value="10 5" />
        </Style>
    </Window.Resources>
    <Grid Background="#959595">
        <views:PassCheckView MaxWidth="320" DataContext="{Binding CurrentViewModel}" />
    </Grid>
</Window>