<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notepad.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#7eba73" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Notepad!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Editor x:Name="editor_notepad" HeightRequest="700"></Editor>
        <Button x:Name="btn_save_txt_to_file" Text="Zapisz tekst do pliku" Clicked="btn_save_txt_to_file_Clicked"></Button>
        <Button x:Name="btn_read_txt_from_file" Text="Pobierz tekst z pliku" Clicked="btn_read_txt_from_file_Clicked"></Button>
    </StackLayout>

</ContentPage>
